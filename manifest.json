{
  "manifest_version": 2,
  "name": "W-Translate",
  "description": "Translate selected text in current tab (page) from English to any language...",
  "version": "1.0",
  "icons": {
    "512": "icons/icon512.png",
    "128": "icons/icon128.png",
    "64": "icons/icon64.png",
    "32": "icons/icon32.png"
  },
  "browser_action": {
    "default_title": "W-Translate",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "./scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "./scripts/content.js"
      ]
    }
  ]
}
