{
  "manifest_version": 2,
  "name": "W-Translate",
  "description": "Translate the selected text in current tab to any language by one click..",
  "version": "1.0",
  "icons": {
    "256": "icons/icon256.png",
    "128": "icons/icon128.png",
    "64": "icons/icon64.png",
    "32": "icons/icon32.png"
  },
  "browser_action": {
    "default_title": "W-Translate",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "./scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "./scripts/content.js"
      ]
    }
  ]
}